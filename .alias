swap() { $1 $3; $2;}
swap_pipe() { $1 $3| $2;}
cd() { [ $# -eq 0 ] && builtin cd ~  ||  { builtin cd "$1" && ls -FG;} }

alias ll='ls -alFgG'
alias la='ls -AF'
alias l='ls -CF'
alias grep='grep --color=auto'
alias gdb='gdb -q'
alias calc="sage"
alias pacman='sudo pacman --color always'
alias sp='sudo pacman -Syu;yaourt -Syu'
alias top='htop'
alias mandb='sudo mandb'
alias db='sudo updatedb'
alias locate='swap_pipe "locate" "more" $1'
alias apropos='swap_pipe "apropos" "more" $1'
alias m='make;k'
alias g="google"
alias hex="od -t x1"
alias github='open https://github.com/tati-z/$(basename $PWD)'
alias ga='git add'
alias gs='git status'
alias gc='git commit -m'
alias gp='git pull'
alias gpo='git push origin master && github'
alias gl='git log --pretty=format:"%an"  "%at"  "%s"'
alias ..='cd ..'
alias ...='cd ../..'
alias .b='. ~/.bash_profile'
alias gd='git diff'
alias gmail='open https://mail.google.com/mail/u/0/#inbox'
alias facebook='open https://www.facebook.com/'
alias diff='diff -y --color=always'
alias youtube='google -youtube'
alias y='youtube'
alias wiki='google wikipedia'
alias jac='javac *.java && java Main && rm *.class'
alias kl='kill %1' 
